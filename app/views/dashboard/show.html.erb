<h1 class="text-4xl font-bold underline">Welcome Home, <%= current_user.email %></h1>
<h2 class="font-bold">Your Jobs</h2>
<ul>
  <% current_user.jobs.each do |job| %>
    <li>
      <%= link_to job.title, job_path(job) %>
      <% if job.resume %>
        (Resume: <%= link_to job.resume.title, resume_path(job.resume) %>)
      <% else %>
        (No Resume Selected)
      <% end %>

      <% if job.letter %>
        (Letter: <%= link_to job.letter.title, resume_path(job.letter) %>)
      <% else %>
        (No Letter Selected)
      <% end %>
    </li>
  <% end %>
</ul>

<h2>Your Resumes</h2>
<ul>
  <% current_user.resumes.each do |resume| %>
    <li>
      <%= link_to resume.title, resume_path(resume) %>
    </li>
  <% end %>
</ul>

<h2>Your Letters</h2>
<ul>
  <% current_user.letters.each do |letter| %>
    <li>
      <%= link_to letter.title, letter_path(letter) %>
    </li>
  <% end %> 
</ul>


<ul>
  <li>
    <%= link_to 'Create a new job', new_job_path %>
  </li>
  <li>
    <%= link_to 'Create a new resume', new_resume_path %>
  </li>
  <li>
    <%= link_to 'Create a new letter', new_letter_path %>
  </li>
  <li>
    <%= link_to "Logout", destroy_user_session_path, method: :delete %>
  </li>
</ul>