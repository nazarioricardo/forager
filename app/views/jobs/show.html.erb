<main>
  <section class="content">
    <% if @job.link.present? %>
      <h1><%= link_to "#{@job.company} - #{@job.role}", @job.link %></h1>
    <% else %>
      <h1><%= "#{@job.company} - #{@job.role}" %></h1>
    <% end %>
    <p><%= @job.created_at.strftime('%m/%d/%Y') %></p>
    <%= link_to 'Edit', edit_job_path(@job) %>
  </section>

  <section class="content">
    <%= link_to 'Download Documents', download_job_path(@job), data: { turbo: 'false' } %>
  </section>

  <section class="content">
    <h2>Status</h2>
    <p><%= @job.status %></p>
  </section>



  <section class="content">
    <h2>Resume</h2>
    <% if @job.resume %>
    <%= link_to @job.resume.title, resume_path(@job.resume) %>  
    <%= link_to "View Document", url_for(@job.resume.drive_url), target: "_blank" %>
    <% elsif @resumes.any? %>
      <%= form_with model: @job, local: true do |form| %>
        <div class="field">
          <%= form.collection_select :resume_id, @resumes, :id, :title, include_blank: true %>
          <%= form.submit 'Confirm Resume' %>
        </div>
      <% end %>
    <% end %>
    <% if !@job.resume %>
      <%= link_to 'Create a New Resume', new_resume_path(job_id: @job.id) %>
    <% end %>
  </section>

  <section class="content">
    <h2>Cover Letter</h2>
    <% if @job.letter %>
      <%= link_to @job.letter.title, letter_path(@job.letter) %>  
      <%= link_to "View Document", url_for(@job.letter.drive_url), target: "_blank" %>
    <% elsif @letters.any? %>
      <%= form_with model: @job, local: true do |form| %>
        <div class="field">
          <%= form.collection_select :letter_id, @letters, :id, :title, include_blank: true %>
          <%= form.submit 'Confirm Letter' %>
        </div>
      <% end %>
    <% end %>
    <% if !@job.letter %>
      <%= link_to 'Create a New Letter', new_letter_path(job_id: @job.id) %>
    <% end %>

  </section>

  <section class="content">
    <h2>Description</h2>
    <p><%= simple_format(@job.description) %></p>
  </section>
</main>

